{{ form_start(form, {attr: attr|default({})}) }}
    {{ form_widget(form) }}

    <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
        <i class="fas fa-save" aria-hidden="true"></i> {{ button_label|default('Dodaj') }}
    </button>

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path(home_path) }}" class="btn btn-link">
            <i class="far fa-list-alt" aria-hidden="true"></i> {{text}}
        </a>
    {% endif %}
{{ form_end(form) }}