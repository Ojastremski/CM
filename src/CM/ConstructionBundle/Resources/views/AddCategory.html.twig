{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-container">
        <div class="row">
            <div class="col-sm-9">
                {{ include('form/flash_messages.html.twig') }}
                <h1>Dodawanie nowej kategorii </h1>
                {{ form_start(form) }}
                    {{ form_row(form.categoryName) }}
                    {{ form_row(form.active) }}
     
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save" aria-hidden="true"></i>
                        Dodaj
                    </button>
                    {{ form_widget(form.saveAndCreateNew, {label: 'Zapisz i dodaj kolejną', attr: {class: 'btn btn-primary'}}) }}
                    <a href="{{ path('category_list') }}" class="btn btn-link">
                        <i class="far fa-list-alt" aria-hidden="true"></i> Powrót do listy kategorii
                    </a>
                {{ form_end(form) }}
            </div>
            <div id="sidebar" class="col-sm-3">
            </div>
        </div>
    </div>

{% endblock %}