{% extends '@Access/base.html.twig' %}
{% block header %}
    {% stylesheets '@ConstructionBundle/Resources/public/css/*' output='css/compiled/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container body-container">
        <div class="row">
            <div id="main" class="col-sm-10">
                <div class="messages"></div>
                <h1>Lista otwartych objektów budowlanych</h1>
                <table class="table table-striped table-middle-aligned">
                    <thead>
                        <tr>
                            <th scope="col">Nazwa</th>
                            <th scope="col">
                                <i class="fas fa-calendar-alt" aria-hidden="true"></i>
                                Dodano
                            </th>
                            <th scope="col" class="text-center">
                                <i class="fas fa-cogs" aria-hidden="true"></i>
                                Akcje
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="colName"><a href="#">Gliwice Bojkowska</a></td>
                            <td>05.12.2017, 17:36</td>
                            <td class="text-center">
                                <div class="item-actions">
                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit" aria-hidden="true"></i>
                                        Edytuj
                                    </a>
                                    <a href="#" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                                        Usuń
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div id="sidebar" class="col-sm-2">
                <div class="section actions">
                    <a href="#" class="btn btn-lg btn-block btn-success">
                        <i class="fas fa-plus" aria-hidden="true"></i> Nowy objekt
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}